#include <stdio.h>
#pragma warning(disable:4996)
void prime(int n)
{
	int number=0;
	for (int i = 0; i < n; i++)
	{
		if (n % i == 0) {

			number = 0;

		}
		else {
			number = 1;

		}
	}
	if (number == 1) {
		printf("소수입니다");
	}
	else {
		printf("소수가아닙니다");
	}
}

	
int main(void)
{
	int num = 0;
	printf("3 이상의 숫자를입력해주세요\n");
	scanf("%d", &num);
	prime(num);
	return 0;
}
